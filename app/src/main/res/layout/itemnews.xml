<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <android.support.v7.widget.CardView
        android:id="@+id/itemnews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:orientation="vertical"
        card_view:cardBackgroundColor="@color/backgroundcard"
        card_view:cardCornerRadius="50dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="20dp"
        tools:context=".Item">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundcard"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newstitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="@string/Newstitle" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
            <TextView
                android:id="@+id/news_writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textStyle="italic"
                tools:text="@string/Newstitle" />
               <TextView
                   android:id="@+id/news_publish_date"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:layout_marginBottom="10dp"
                   android:textSize="10sp"
                   android:textStyle="italic"
                   tools:text="@string/Newstitle" />

           </LinearLayout>
            <ImageView
                android:id="@+id/newsimage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                tools:src ="@drawable/ic_launcher_background" />


            <TextView
                android:id="@+id/newsdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="@string/Newsdescriptionexample" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
